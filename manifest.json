{
  "manifest_version": 3,
  "name": "HS Trier QIS Helper",
  "description": "Erweitert den QIS Notenspiegel der Hochschule Trier um einige hilfreiche Funktionen.",
  "version": "1.15",
  "action": {
    "default_popup": "extension_menu/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png",
      "128": "icons/icon-128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "hochschulcrawler@gmail.com",
      "update_url": "https://mariolampert.de/projekte/HSTrierQISHelper/Firefox/updates.json"
    }
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://qis.hochschule-trier.de/*"
  ],
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "*://qis.hochschule-trier.de/qisserver/*"
      ]
    }
  ]
}